---

<section id="timeline" class="px-10 mb-[150px]">
  <h1 class="font-extrabold text-3xl mb-9">Experience</h1>

  <ol class="relative border-s border-gray-200">
    {
      experience.map(({ company, role, duration, durationRelative, text }) => (
        <li class="mb-10 ms-4">
          <TimelinElement
            company={company}
            role={role}
            duration={duration}
            durationRelative={durationRelative}
            text={text}
          />
        </li>
      ))
    }
  </ol>
</section>
