---
interface Props {
  company: string;
  role: string;
  duration: string;
  durationRelative: string;
  text: string;
}

const { company, role, duration, durationRelative, text } = Astro.props;
---

<div
  class="absolute w-3 h-3 bg-gray-700 rounded-full mt-1.5 -start-1.5 border border-white"
>
</div>
<time class="mb-1 text-xl font-normal leading-none text-gray-700">
  {company}
  <br />
  <span class="text-sm text-gray-400">
    {duration} â€¢ {durationRelative}
  </span>
  <br />
  <span class="text-sm text-gray-400">{role}</span>
</time>
<h3 class="text-md font-semibold text-gray-900 mt-3">
  My role at {company}
</h3>

<article class="text-sm text-gray-400" set:html={text} />
